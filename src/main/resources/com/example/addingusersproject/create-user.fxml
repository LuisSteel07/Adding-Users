<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" spacing="15" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.addingusersproject.controllers.CreateUserController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Button fx:id="backToHome" onAction="#backToHome" style="-fx-start-margin: 10" text="â†" />
    <Label fx:id="title" style="-fx-text-fill: red; -fx-font-size: 20; -fx-font-weight: 900" text="Create User" />

    <VBox>
        <Label fx:id="nameLabel" style="-fx-font-weight: 500" text="Name" />
        <TextField fx:id="name" style="-fx-start-margin: 10; -fx-max-width: 250" />
        <Label fx:id="ageLabel" style="-fx-font-weight: 500" text="Age" />
        <TextField fx:id="age" style="-fx-start-margin: 10; -fx-max-width: 250" />
        <Label fx:id="emailLabel" style="-fx-font-weight: 500" text="Email" />
        <TextField fx:id="email" style="-fx-start-margin: 10; -fx-max-width: 250" />
        <Label fx:id="passwordLabel" style="-fx-font-weight: 500" text="Password" />
        <PasswordField fx:id="password" style="-fx-start-margin: 10; -fx-max-width: 250" />
    </VBox>

    <Button onAction="#createUser" style="-fx-start-margin: 10" text="Create User" />
    <Label fx:id="message" style="-fx-text-fill: green; -fx-font-weight: 900; -fx-font-size: 20; -fx-start-margin: 10" />

</VBox>
