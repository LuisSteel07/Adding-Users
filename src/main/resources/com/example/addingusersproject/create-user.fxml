<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.addingusersproject.controllers.CreateUserController"
            prefHeight="400.0" prefWidth="600.0">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="title" style="-fx-text-fill: red; -fx-font-size: 20; -fx-font-weight: 900"/>
    <TextField fx:id="name" style="-fx-start-margin: 10; -fx-max-width: 250"/>
    <TextField fx:id="age" style="-fx-start-margin: 10; -fx-max-width: 250"/>
    <TextField fx:id="email" style="-fx-start-margin: 10; -fx-max-width: 250"/>
    <TextField fx:id="password" style="-fx-start-margin: 10; -fx-max-width: 250"/>
    <Button text="Create User" onAction="#createUser" style="-fx-start-margin: 10"/>
    <Label fx:id="message" style="-fx-text-fill: green; -fx-font-weight: 900; -fx-font-size: 20; -fx-start-margin: 10"/>

</VBox>
