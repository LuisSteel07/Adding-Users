<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="240.0" prefWidth="447.0" spacing="20.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.addingusersproject.controllers.PrincipalViewController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <HBox alignment="CENTER" blendMode="DARKEN" prefHeight="0.0" prefWidth="405.0">
       <Button onAction="#onCreateButton" text="Create User" />
       <Button onAction="#onSearchButton" text="Buscar Usuario" />
       <Button onAction="#onDeleteButton" text="Eliminar Usuario" />
    </HBox>

    <TableView fx:id="userTable">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" />
            <TableColumn fx:id="nameColumn" text="Name" />
            <TableColumn fx:id="ageColumn" text="Age" />
            <TableColumn fx:id="emailColumn" text="Email" />
            <TableColumn fx:id="passwordColumn" text="Password" />
        </columns>
    </TableView>
</VBox>
